{
	"extends": "react-app",
	"rules": {
		"indent": [
			"error",
			"tab"
		],
		"class-methods-use-this": "off",
		"comma-dangle": [
			"error",
			"always-multiline"
		],
		"no-console": "warn",
		"no-warning-comments": "warn",
		"semi": [
			"error",
			"always"
		],
		"space-before-function-paren": [
			"error",
			{
				"anonymous": "always",
				"named": "never"
			}
		],
		"jsx-quotes": [
			"error",
			"prefer-double"
		],
		"no-unused-vars": "error",
		"react/sort-prop-types": "error",
		"import/no-named-as-default": "off",
		"import/order": "error"
	}
}